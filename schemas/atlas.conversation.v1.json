{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Atlas ConversationGraph",
  "description": "Schema for Atlas Engine ConversationGraph files (.conversation). ConversationGraphs manage dialogue flow, memory writes, and relationship deltas â€” they emit state but never execute actions or access ECS.",
  "type": "object",
  "required": ["schema", "nodes"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "atlas.conversation.v1"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "position": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 2,
            "maxItems": 2
          },
          "params": { "type": "object" },
          "inputs": { "type": "object" }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" }
        }
      }
    },
    "outputs": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
