{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "atlas.project.v1",
  "title": "Atlas Project",
  "description": "Schema for Atlas Engine project files (.atlas)",
  "type": "object",
  "required": ["schema", "name", "version"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "atlas.project.v1",
      "description": "Schema identifier and version"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable project name"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the project (e.g. 1.0.0)"
    },
    "description": {
      "type": "string",
      "description": "Optional project description"
    },
    "modules": {
      "type": "object",
      "description": "Module references for the project",
      "properties": {
        "worldGraph": {
          "type": "string",
          "description": "Path to the entry WorldGraph file"
        },
        "strategyGraphs": {
          "type": "string",
          "description": "Directory path for StrategyGraph files"
        },
        "ai": {
          "type": "boolean",
          "description": "Whether AI systems are enabled"
        },
        "content": {
          "type": "string",
          "description": "Path to the content/data directory"
        }
      },
      "additionalProperties": false
    },
    "runtime": {
      "type": "object",
      "description": "Runtime configuration",
      "properties": {
        "entryWorld": {
          "type": "string",
          "description": "Path to the initial world to load at startup"
        },
        "tickRate": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120,
          "default": 30,
          "description": "Simulation tick rate in Hz"
        },
        "maxPlayers": {
          "type": "integer",
          "minimum": 1,
          "maximum": 64,
          "default": 20,
          "description": "Maximum number of connected players"
        }
      },
      "additionalProperties": false
    },
    "assets": {
      "type": "object",
      "description": "Asset configuration",
      "properties": {
        "root": {
          "type": "string",
          "default": "assets",
          "description": "Root directory for project assets"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
